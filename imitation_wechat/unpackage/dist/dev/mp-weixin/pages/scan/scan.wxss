
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.scan-box {
	width: 600rpx;
	height: 600rpx;
	position: relative;
}
.scan-tip {
	margin-top: 30rpx;
	font-size: 30rpx;
	color: #666;
}
.button {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 50rpx;
	background-color: rgba(0, 0, 0, 0.5);
	padding: 20rpx 40rpx;
	border-radius: 50rpx;
}
.icon {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.text {
	font-size: 30rpx;
	color: #ffffff;
}

